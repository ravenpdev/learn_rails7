<h1>Articles</h1>
Our blog has <%= Article.public_count %> articles and counting!
<div class="container">
  <%= link_to "Create Article", new_article_path %>
  <div class="row row-cols-3 gx-4 gy-4">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <div class="col">
          <div class="card">
            <div class="card-body">
              <!-- <h2 class="card-title"><%= link_to article.title, controller: "articles", action: "show", id: article.id %></h2> -->
              <h2 class="card-title"><%= link_to article.title, article %></h2>
              <p class="card-text">
                <%= article.body %>
              </p>
              <span>Status: <%= article.status || "not set" %></span>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
